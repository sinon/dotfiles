// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_family": "JetBrains Mono",
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "model_parameters": []
  },
  "inlay_hints": {
    "enabled": true
  },
  "project_panel": {
    "hide_gitignore": true
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto"
  },
  "autosave": "on_focus_change",
  "wrap_guides": [80, 100],
  "file_types": {
    "java": ["*.java"],
    "plaintext": [".lycheeignore"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 15.0,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Catppuccin Mocha"
  },
  "languages": {
    "Python": {
      "language_servers": ["!pyrefly", "!basedpyright", "ty", "..."]
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": { "keyOrdering": false, "format": { "singleQuote": true } }
      }
    },
    "pyrefly": {
      "binary": {
        "path": "/Users/Rob.Hand/.local/bin/pyrefly",
        "arguments": ["lsp"]
      },
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "pyrefly": {
          "project_includes": ["src/**/*.py", "tests/**/*.py"],
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          // "search_path": ["src"],
          "ignore_errors_in_generated_code": true
        }
      }
    },
    "ty": {
      "binary": {
        "path": "/Users/Rob.Hand/.local/bin/ty",
        "arguments": ["server"]
      }
    }
  },
  "format_on_save": "on",
  "show_edit_predictions": false,
  "show_completions_on_input": false
}
