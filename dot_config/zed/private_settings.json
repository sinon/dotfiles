// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "colorize_brackets": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "show_whitespaces": "all",
  "whitespace_map": {
    // Which characters to show when `show_whitespaces` enabled
    "space": "•",
    "tab": "⟶", // use "→", for a shorter arrow
  },
  "agent": {
    "profiles": {},
    "favorite_models": [
      {
        "provider": "copilot_chat",
        "model": "claude-sonnet-4.5",
      },
      {
        "provider": "copilot_chat",
        "model": "gemini-3-pro-preview",
      },
      {
        "provider": "copilot_chat",
        "model": "gpt-5.2",
      },
      {
        "provider": "copilot_chat",
        "model": "gpt-5.2-codex",
      },
    ],
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.2-codex",
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o-mini",
    },
    "thread_summary_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.0-flash",
    },
    "model_parameters": [],
  },
  "inlay_hints": {
    "enabled": true,
  },
  "project_panel": {
    "hide_gitignore": true,
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto",
  },
  "autosave": "on_focus_change",
  "wrap_guides": [80, 100],
  "file_types": {
    "java": ["*.java"],
    "plaintext": [".lycheeignore"],
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "vim_mode": true,
  "ui_font_size": 15.0,
  "buffer_font_size": 13.0,
  // "buffer_font_fallbacks": ["FiraCode Nerd Font"],
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato",
    "dark": "Catppuccin Macchiato",
  },
  "languages": {
    "Markdown": {
      "format_on_save": "off",
    },
    "TOML": {
      "format_on_save": "on",
    },
    "JSON": {
      "format_on_save": "off",
    },
    "YAML": {
      "format_on_save": "off",
    },
    "Git Config": {
      "tab_size": 4,
      "show_whitespaces": "all",
    },
    "Python": {
      "language_servers": [
        "ty",
        "ruff",
        "!basedpyright",
        "!pyrefly",
        "!pyright",
        "!pylsp",
      ],
      "code_actions_on_format": {
        // Organize imports
        "source.organizeImports.ruff": true,
        // Fix all auto-fixable lint violations
        "source.fixAll.ruff": true,
      },
    },
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": { "keyOrdering": false, "format": { "singleQuote": true } },
      },
    },
    "pyrefly": {
      "binary": {
        "path": "~/.local/bin/pyrefly",
        "arguments": ["lsp"],
      },
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python",
        },
        "pyrefly": {
          "project_includes": ["src/**/*.py", "tests/**/*.py"],
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          // "search_path": ["src"],
          "ignore_errors_in_generated_code": true,
        },
      },
    },
    "ty": {
      "binary": {
        "path": "~/.local/bin/ty",
        "arguments": ["server"],
      },
    },
  },
  "format_on_save": "on",
  "show_edit_predictions": false,
  "show_completions_on_input": true,
}
